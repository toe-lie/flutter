name: {{projectName}}
description: {{description}}
publish_to: 'none'
version: 0.1.0

scripts:
  build_runner_build: dart run build_runner build --delete-conflicting-outputs
  build_runner_watch: dart run build_runner watch --delete-conflicting-outputs
  create_feature_package: flutter create --template=package /packages/features/{package_name}
  create_core_flutter_package: flutter create --template=package /packages/features/{package_name}
  create_core_dart_package: dart create -t package /packages/impl/retrofit_api
  generate_assets: fluttergen -c ./packages/core/assets/pubspec.yaml
  sync_localization:
    script: excel2arb -u https://your-excel-url.com -o lib/l10n/locales -g true
    description: Sync localization files from google sheet
    directory: packages/core/localization

environment:
  sdk: {{dartSdkVersionBounds}}

dependencies:
  bloc: ^8.1.2
  bloc_concurrency: ^0.2.2
  chucker_flutter: ^1.5.2
  decimal: ^2.3.2
  dio: ^5.4.2+1
  drift: ^2.11.1
  drift_db_viewer: ^2.0.0
  dropdown_button2: ^2.3.9
  equatable: ^2.0.5
  firebase_core: ^2.15.0
  flutter:
    sdk: flutter
  flutter_bloc: ^8.1.3
  flutter_driver:
    sdk: flutter
  flutter_staggered_grid_view: ^0.7.0
  formz: ^0.6.0
  go_router: ^13.2.2
  google_fonts: ^5.1.0
  hive: ^2.2.3
  hive_flutter: ^1.1.0
  intl: ^0.19.0
  intl_phone_field: ^3.2.0
  lottie: ^2.7.0
  path: ^1.8.3
  path_provider: ^2.0.15
  rxdart: ^0.27.7
  smooth_page_indicator: ^1.1.0
  workmanager: ^0.5.2
  flutter_localized_locales: ^2.0.5
  responsive_framework: ^1.4.0

  # region:core:start
  base:
    path: packages/core/base
  data:
    path: packages/core/data
  domain:
    path: packages/core/domain
  design_system:
    path: packages/core/design_system
  ui:
    path: packages/core/ui
  api:
    path: packages/core/api
  localization:
    path: packages/core/localization
  assets:
    path: packages/core/assets
  flavor:
    path: packages/core/flavor
  preferences:
    path: packages/core/preferences
  database:
    path: packages/core/database
  debug:
      path: packages/core/debug
  # region:core:end

  # region:impl:start
  hive_preferences:
    path: packages/impl/hive_preferences
  retrofit_api:
    path: packages/impl/retrofit_api
  drift_database:
    path: packages/impl/drift_database
  # region:impl:end

  # region:features:start
  sample:
    path: packages/features/sample
  # region:features:end

dev_dependencies:
  flutter_test:
    sdk: flutter
  flutter_lints: ^4.0.0
  integration_test:
    sdk: flutter
  test: ^1.24.1
  mocktail: ^0.3.0
  bloc_test: ^9.1.3
  melos: ^5.3.0
  json_serializable: ^6.7.0
  go_router_builder: any
  build_runner: any
  build_verify: any
  flutter_gen_runner: any

flutter:
  uses-material-design: true
  fonts:
    - family: BricolageGrotesque
      fonts:
        - asset: packages/assets/fonts/BricolageGrotesque-Light.ttf
          weight: 300
        - asset: packages/assets/fonts/BricolageGrotesque-Regular.ttf
          weight: 400
        - asset: packages/assets/fonts/BricolageGrotesque-Medium.ttf
          weight: 500
        - asset: packages/assets/fonts/BricolageGrotesque-SemiBold.ttf
          weight: 600
        - asset: packages/assets/fonts/BricolageGrotesque-Bold.ttf
          weight: 700
        - asset: packages/assets/fonts/BricolageGrotesque-ExtraBold.ttf
          weight: 800