import 'package:domain/domain.dart';
import 'package:flutter/material.dart';
import 'package:flutter_bloc/flutter_bloc.dart';

import '../bloc/bloc.dart';
import 'sample_list_screen.dart';

typedef SampleListItemEventHandler = void Function(Sample);

class SampleListScreenEntry extends StatelessWidget {
  const SampleListScreenEntry({
    super.key,
    required this.onSampleListItemEvent,
  });

  final SampleListItemEventHandler onSampleListItemEvent;

  @override
  Widget build(BuildContext context) {
    return BlocProvider(
      create: (context) => SampleListBloc()..add(const SampleListFetched()),
      child: SampleListScreen(
        onSampleListItemEvent: onSampleListItemEvent,
      ),
    );
  }
}
