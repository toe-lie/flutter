import 'package:domain/domain.dart';
import 'package:flutter/material.dart';
import 'package:flutter_bloc/flutter_bloc.dart';

import '../bloc/sample_detail_bloc.dart';
import 'sample_detail_screen.dart';

class SampleDetailScreenEntry extends StatelessWidget {
  const SampleDetailScreenEntry({
    super.key,
    required this.sampleId,
  });

  final String sampleId;

  @override
  Widget build(BuildContext context) {
    return BlocProvider(
      create: (context) => SampleDetailBloc(
        sampleId: sampleId,
      )..add(SampleDetailFetched(sampleId)),
      child: SampleDetailScreen(
        sampleId: sampleId,
      ),
    );
  }
}
